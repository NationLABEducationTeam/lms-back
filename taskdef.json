{
    "family": "lms-ecs-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::471112588210:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::471112588210:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "lms-ecs",
            "image": "<IMAGE_NAME>",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ],
            "secrets": [
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:471112588210:parameter/lms/AWS_ACCESS_KEY_ID"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:471112588210:parameter/lms/AWS_SECRET_ACCESS_KEY"
                },
                {
                    "name": "COGNITO_USER_POOL_ID",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:471112588210:parameter/lms/COGNITO_USER_POOL_ID"
                },
                {
                    "name": "COGNITO_CLIENT_ID",
                    "valueFrom": "arn:aws:ssm:ap-northeast-2:471112588210:parameter/lms/COGNITO_CLIENT_ID"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/lms-backend",
                    "awslogs-region": "ap-northeast-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
} 